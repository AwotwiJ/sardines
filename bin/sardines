#!/usr/bin/env node
var cli = require("optimist").
usage('Usage: $0 -e [entry] -o [output] -p [port] -c -d').
default("d", process.cwd()).
alias("d", "directory").
default("p", 8080).
alias("h", "help").
alias("p", "port").
alias("s", "server");

var argv = cli.argv;

if(argv.help) {
	cli.showHelp();
	process.exit();
}


if(argv.server) {
	var express = require("express");
	var server = express.createServer();
	server.use(require("../").middleware({
		directory: argv.d
	}));
	// server.use(express.static(argv.d));
	server.listen(argv.p);
} else {

}